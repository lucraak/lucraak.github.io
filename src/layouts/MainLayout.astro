---
//import { string } from 'astro/zod';
import MainHead from './MainHead.astro';

//style import
import "../styles/main.css";
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const { title = "Luc Tiemessen, Designer", description = "Personal site of Luc Tiemessen, Designer, thinking and writing about philosphy, design and fountain pens." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<MainHead {title} {description}/>
<body class="">
    <nav class="skiplink"><a href="#content">Skip to content</a></nav>
    <div class="wrapper">
        <Nav />
        <main id="content" class="grid-wrapper" role="region">
            <div>
                <slot>Default text</slot>
            </div>
        </main>
        <Footer />
    </div>
</body>
</html>